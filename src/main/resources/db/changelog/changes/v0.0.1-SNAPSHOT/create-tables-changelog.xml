<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="VladyslavGorin" id="create users table">
        <preConditions onFail="CONTINUE" onFailMessage="Table users already exists">
            <not>
                <tableExists tableName="users"/>
            </not>
        </preConditions>
        <createTable tableName="users">
            <column name="user_id" type="binary(32)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(128)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="last_name" type="varchar(128)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="email" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
            <column name="age" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="driver_category" type="varchar(128)">
                <constraints nullable="true"/>
            </column>
            <column name="user_role" type="varchar(16)">
                <constraints nullable="false"/>
            </column>
            <column name="department_accessory" type="binary(32)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="service_accessory" type="binary(32)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="birth_day" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
            <column name="logistic_id" type="binary(32)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="services">
            <column name="service_id" type="binary(32)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="service_name" type="varchar(128)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="dep_id" type="binary(32)">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
        </createTable>
        <createTable tableName="logistic">
            <column name="logistic_id" type="binary(32)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="auto_name" type="varchar(128)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="auto_status" type="varchar(128)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
        <createTable tableName="department">
            <column name="dep_id" type="binary(32)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="dep_name" type="varchar(128)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="service_id" type="binary(32)">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>